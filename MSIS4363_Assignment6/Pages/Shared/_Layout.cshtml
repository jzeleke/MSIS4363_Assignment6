@inherits Microsoft.AspNetCore.Mvc.Razor.RazorPage<dynamic>
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - OKState Department</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="topbar">
        <div class="topbar-inner container">
            <a class="brand" href="/">OKState.edu</a>
            <nav class="topnav">
                <a href="/about">About</a>
                <a href="/departments">Departments</a>
                <a href="/workorder">Contact Us</a>
                <a href="/careers">Careers</a>
            </nav>
            <div class="top-actions">
                <a class="login" href="https://my.okstate.edu">Log in</a>
            </div>
        </div>
    </header>

    <div class="site-nav">
        <div class="container">
            <nav class="main-menu">
                <a href="/about">About Ambiguous Department</a>
                <a href="/org-charts">Organizational Charts</a>
                <a href="/guide-to-services">Services</a>
                <a href="/departments">Sub-Departments</a>
            </nav>
        </div>
    </div>

    @RenderBody()

    <footer class="site-footer">
        <div class="container footer-grid">
            <div class="footer-col">
                <h4>Facilities Management</h4>
                <ul>
                    <li><a href="/">About Facilities Management</a></li>
                    <li><a href="/departments">Departments</a></li>
                    <li><a href="/service-request">Careers</a></li>
                </ul>
            </div>

            <div class="footer-col">
                <h4>Contact</h4>
                <p>Stillwater, OK 74078<br/>(XXX) XXX-XXXX</p>
            </div>

            <div class="footer-col">
                <h4>Follow OSU</h4>
                <ul class="socials">
                    <li><a href="#">News</a></li>
                    <li><a href="#">Events</a></li>
                    <li><a href="#">YouTube</a></li>
                </ul>
            </div>
        </div>

        <div class="container copyright">
            <p>© Oklahoma State University. All rights reserved.</p>
            <p class="small-links">
                <a href="#">Accessibility Services</a> |
                <a href="#">Privacy Notice</a> |
                <a href="#">Terms of Service</a>
            </p>
        </div>
    </footer>
</body>
</html>
